@model DesafioMVC.DTO.EventoDTO
@{
    Layout = "_Layout";
}

<h4>Cadastrar evento</h4>
<hr>
<form class="form-horizontal" asp-controller="Eventos" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Ex: Show do Fulano">
    <span asp-validation-for="Nome"></span>
    <br>
    <label asp-for="Capacidade">Capacidade</label>
    <input type="number" asp-for="Capacidade" class="form-control" min="1" max="2147483647" placeholder="Ex: 999">
    <span asp-validation-for="Capacidade"></span>
    <br>
    <label asp-for="Data">Data e hora</label>
    <input type="datetime-local" asp-for="Data" class="form-control" min="@ViewBag.DataAtual">
    <span asp-validation-for="Data"></span>
    <br>
    <label asp-for="ValorIngresso">Valor do ingresso</label>
    <input type="text" asp-for="ValorIngresso" class="form-control" placeholder="XX XXXX XXXX">
    <span asp-validation-for="ValorIngresso"></span>
    <br>
    <label asp-for="EstabalecimentoId">Estabelecimento</label>

    <br>
    <label asp-for="GeneroId">GÃªnero musical</label>

    <br>
    <label asp-for="ImagemUrl">Imagem</label>

    <br>
    <button class="btn btn-success">Cadastrar</button>
</form>