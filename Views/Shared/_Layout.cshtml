@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <partial name="_HeadPartial" />
</head>
<body>
    @if (SignInManager.IsSignedIn(User) && User.HasClaim("Role", ("admin")))
    {
        <header class="">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark mb-0 box-shadow">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/logos/logo_transparent_background.png" width="50" height="60">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="container ">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Eventos">Eventos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Estabelecimentos">Estabelecimentos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Generos">Gêneros</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Historicos">Histórico</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Opcoes">Opções</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
    </div>
    }
    else
    {
        <header >
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark mb-0 box-shadow">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/logos/logo_transparent_background.png" width="50" height="60">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="container">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="User" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="User" asp-action="Eventos">Eventos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="User" asp-action="Estabelecimentos">Estabelecimentos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="User" asp-action="Historicos">Histórico</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
        <div class="container-fluid m-0 p-0" style="">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="footer bg-dark text-white text-center">
        <div class="container">
            &copy; Blue Ridge - 2022
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
